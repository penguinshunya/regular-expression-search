{
  "manifest_version": 2,
  "name" : "Regular Expression Search",
  "short_name": "regex search",
  "version" : "0.9.0.0",
  "description" : "search using regular expression on chrome extension",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      }
    }
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/jquery-3.3.1.min.js", "js/script.js"]
    }
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage",
    "*://*/*"
  ]
}
