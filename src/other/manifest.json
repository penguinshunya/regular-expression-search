{
  "manifest_version": 3,
  "name": "Regular Expression Search",
  "short_name": "regex search",
  "version": "2.6.0.0",
  "description": "__MSG_description__",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      }
    }
  },
  "icons": {
    "16": "image/icon16.png",
    "48": "image/icon48.png",
    "128": "image/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": [
      "js/page.bundle.js"
    ]
  }],
  "background": {
    "service_worker": "js/background.bundle.js"
  },
  "options_ui": {
    "page": "option.html",
    "open_in_tab": false
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "default_locale": "en",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
